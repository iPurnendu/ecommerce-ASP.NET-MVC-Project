@model Category

<form method="post">

    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100 border-50">
            <div class="col">
                <div class="card card-registration my-4">
                    <div class="row g-0">
                        <div class="col-xl-6 d-none d-xl-block">
                            <img src="https://images.unsplash.com/photo-1616924551095-5156721a1cbc?q=80&w=1964&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
                                 alt="Sample photo" class="img-fluid"
                                 style="border-top-left-radius: .25rem; border-bottom-left-radius: .25rem;" />
                        </div>
                        <div class="col-xl-6">
                            <div class="card-body p-md-5 text-black">
                                <h3 class="mb-5 text-uppercase">Edit Category</h3>
                                <div asp-validation-summary="ModelOnly"></div>
                                <div class="form-outline mb-4">
                                    <label asp-for="Name" class="form-label"></label>
                                    <input asp-for="Name" type="text" id="form3Example8" class="form-control form-control-lg rounded-pill shadow" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                                <div class="form-outline mb-4">
                                    <label asp-for="DisplayOrder" class="form-label"></label>
                                    <input asp-for="DisplayOrder" type="number" id="form3Example8" class="form-control form-control-lg rounded-pill shadow" />
                                    <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                                </div>
                                <div class="d-flex justify-content-end pt-3">

                                    <a asp-controller="Category" asp-action="Index" class="btn btn-info btn-lg ms-2 rounded-pill"><i class="fa-solid fa-backward fa-beat fa-xl"></i>Back to List</a>
                                    <button type="submit" class="btn btn-success btn-lg ms-2 rounded-pill"><i class="fa-solid fa-check fa-beat fa-xl" style="color: #ffffff;"></i>Update</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</form>
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

