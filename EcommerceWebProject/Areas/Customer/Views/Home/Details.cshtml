@model ShoppingCart
<form method="post">
    <input hidden asp-for="ProductId"/>
    <div class="card shadow border-0 mt-4">
        <div class="card-header bg-secondary bg-gradient text-light py-4">
            <div class="row">
                <div class="col-12 text-center">
                    <h3 class="text-black text-uppercase">@Model.Product.ProductName</h3>
                    <p class="text-black-50 fw-semibold mb-0">@Model.Product.Brand</p>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="py-3">
                <div class="row">
                    <div class="col-6 col-md-2 offset-lg-1 pb-1">
                        <a asp-action="Index" class="btn btn-outline-primary bg-gradient mb-5 fw-semibold btn-sm text-uppercase">
                            <small>Back to home</small>
                        </a>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 col-lg-3 offset-lg-1 text-center mb-3">
                        <img src=@Model.Product.ImageURl width="100%" class="rounded" />
                    </div>
                    <div class="col-12 col-lg-6 offset-lg-1">

                        <div class="col-12 col-md-6 pb-4">
                            <h4 class="badge text-black">@Model.Product.Category.Name</h4>
                        </div>
                        <div class="row ps-2">
                            <h3 class="text-dark text-opacity-50  pb-2">
                                Price: ₹
                                <span class="text-decoration-line-through text-danger">
                                    @Model.Product.Price.ToString()
                                </span>
                                &nbsp; ₹
                                <span class="text-success">
                                    @Model.Product.DisccountPrice.ToString()
                                </span>
                            </h3>
                        </div>
                        <div class="row ps-2">
                            <h5 class="text-dark text-opacity-50 ">Color : @Model.Product.Color</h5>
                        </div>
                        <div class="row ps-2">
                            <h5 class="text-dark text-opacity-50 ">Storage : @Model.Product.Storage</h5>
                        </div>

                        <div class="row pl-2 my-3">

                            <p class="text-secondary lh-sm">Description</p>
                            <ul>
                                <li>@Model.Product.Description1</li>
                                <li>@Model.Product.Description2<li>
                                <li>@Model.Product.Description3</li>
                            </ul>
                        </div>
                        <div class="row pl-2 mb-3">
                            <div class="col-md-4">
                                <div class="input-group mb-3">
                                    <span class="input-group-text bg-primary text-white border-0 fw-semibold"
                                          id="inputGroup-sizing-default">
                                        Count
                                    </span>
                                    <input asp-for="Count" type="number" value="1" class="form-control text-end"
                                           aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" />

                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12 col-md-6 pb-1">
                                <button type="submit"
                                        class="btn btn-primary bg-gradient  w-100 py-2 text-uppercase fw-semibold">
                                    Add to Cart
                                </button>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</form>
